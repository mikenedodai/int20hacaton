@model IEnumerable<Site.Domain.Item>

@{
    ViewData["Title"] = "Flex&Grecha";
}

<section class="items row">

    @{
        foreach (var item in Model)
        {
            <div class="item-buckwheat col-xs-12 col-md-6 col-lg-4">
                <div class="content row">
                    <div class="image-wrapper col-xs-6 col-xs-12 col-lg-12">
                        <img src="@item.ImageUrl" alt="">
                    </div>
                    <div class="information col-xs-6 col-xs-12 col-lg-12">
                        <ul>
                            <li class="item-name">Назва: @item.Name</li>
                            <li class="item-value">Вартість: @item.Price.ToString("c")/кг</li>
                            <li class="shop-name">Магазин: @item.StoreName </li>

                        </ul>
                    </div>

                </div>
            </div>
        }
    }

</section>

<section class="plot">
    <div class="plot-container">
        <h3>График цен на гречку</h3>
        <canvas id="myChart"></canvas>
        <script>

        </script>
    </div>
</section>